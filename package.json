{
    "name": "eslint-config-vidhill",
    "version": "3.0.0",
    "description": "Personal eslint config preferences for own open source projects",
    "main": "index.js",
    "scripts": {
        "prettier": "prettier \"**/*.{js,json,md}\"",
        "lint": "npm run prettier -- --check",
        "lint:fix": "npm run prettier -- --write",
        "prepare": "husky install",
        "release": "np --no-tests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vidhill/eslint-config.git"
    },
    "keywords": [
        "eslint",
        "eslintconfig"
    ],
    "author": "David Hill",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/vidhill/eslint-config/issues"
    },
    "homepage": "https://github.com/vidhill/eslint-config#readme",
    "peerDependencies": {
        "eslint": "8.x",
        "eslint-config-prettier": "9.1",
        "eslint-plugin-eslint-comments": "3.x",
        "eslint-plugin-import": "2.x",
        "eslint-plugin-jest": "^28.8.0",
        "eslint-plugin-prettier": "5.2",
        "eslint-plugin-unicorn": "55.x",
        "prettier": "^3.3.3"
    },
    "optionalDependencies": {
        "eslint-plugin-node": "11.x"
    },
    "devDependencies": {
        "husky": "^9.1.4",
        "np": "^10.0.7"
    },
    "engines": {
        "node": ">=12"
    }
}
